<%= form_with(model: @clotter, local: true, url: choose_new_or_edit) do |form| %>
  <% if @clotter.errors.any? %>
    <div id="error_explanation">
      <h2><%= @clotter.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @clotter.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="clotter_content">
    <%= form.text_field :content %>
  </div>
  <%= form.submit "ツイ〜ト" %>
<% end %>

<%= link_to "ホーム画面にもどる", clotters_path %>